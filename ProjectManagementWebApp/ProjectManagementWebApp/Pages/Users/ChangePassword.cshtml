@page
@model ProjectManagementWebApp.Pages.Users.ChangePasswordModel

@{
    ViewData["Title"] = "Change password";
}

<h1>Change password</h1>

<h4>Application user</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ChangePasswordViewModel.Id" />
            <input type="hidden" asp-for="ChangePasswordViewModel.Email" />
            <div class="form-group">
                <label asp-for="ChangePasswordViewModel.CurrentPassword" class="control-label"></label>
                <input asp-for="ChangePasswordViewModel.CurrentPassword" class="form-control" type="password"/>
                <span asp-validation-for="ChangePasswordViewModel.CurrentPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChangePasswordViewModel.NewPassword" class="control-label"></label>
                <input asp-for="ChangePasswordViewModel.NewPassword" class="form-control" type="password"/>
                <span asp-validation-for="ChangePasswordViewModel.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Details" asp-route-id="@Model.ChangePasswordViewModel.Id">Back to Details</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

