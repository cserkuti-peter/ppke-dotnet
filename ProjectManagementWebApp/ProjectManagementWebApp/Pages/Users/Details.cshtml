@model ProjectManagementWebApp.Pages.Users.DetailsModel

@using Microsoft.AspNetCore.Identity
@inject SignInManager<ProjectManagementWebApp.Models.ApplicationUser> SignInManager
@inject UserManager<ProjectManagementWebApp.Models.ApplicationUser> UserManager

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Application user</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserModel.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserModel.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserModel.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserModel.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserModel.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserModel.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserModel.Role)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserModel.Role)
        </dd>
    </dl>
</div>
@if (SignInManager.IsSignedIn(User) && User.IsInRole(nameof(ProjectManagementWebApp.Models.Role.Admin)))
{
    <div>
        <a asp-page="./Edit" asp-route-id="@Model.UserModel.Id">Edit</a> |
        <a asp-page="./ChangePassword" asp-route-id="@Model.UserModel.Id">Change password</a> |
        <a asp-page="./Index">Back to List</a>
    </div>
}
