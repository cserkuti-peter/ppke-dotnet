@using Microsoft.AspNetCore.Identity
@inject SignInManager<ProjectManagementWebApp.Models.ApplicationUser> SignInManager
@inject UserManager<ProjectManagementWebApp.Models.ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Users/Details" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Users/ChangePassword">Change Password</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-page="/Users/Signout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Users/Signin">Login</a>
        </li>
    }
</ul>
