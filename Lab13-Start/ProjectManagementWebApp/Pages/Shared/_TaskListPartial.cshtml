@using ProjectManagementWebApp.ViewModels.TaskViewModels
@model List<TaskDetailsViewModel>
@{
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>

                <td>
                    <a asp-page="../Tasks/Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="../Tasks/Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="../Tasks/Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
