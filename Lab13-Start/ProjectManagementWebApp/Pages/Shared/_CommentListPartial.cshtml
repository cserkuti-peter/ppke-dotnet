@using ProjectManagementWebApp.ViewModels
@model List<CommentViewModel>
@{
}
<dl class="row">
    @foreach (var item in Model)
    {
        <dd class="col-sm-10">
            @Html.DisplayFor(model => item.Comment)
        </dd>
        <dt class="col-sm-2">
            <a asp-page="/Comments/Delete" asp-route-id="@item.Id">Delete</a> 
        </dt>
    }

</dl>