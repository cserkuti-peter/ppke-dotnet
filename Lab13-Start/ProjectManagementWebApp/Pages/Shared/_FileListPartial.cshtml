@using ProjectManagementWebApp.ViewModels
@model List<FileListViewModel>
@{
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].FileName)
            </th>
          
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="~/taskfiles/@item.FileName">@item.FileName </a>
                </td>               
                <td>
                    <form method="post" enctype="multipart/form-data">
                        <input type="submit" asp-page="/Tasks/Details/" asp-page-handler="DeleteFile" value="Delete" class="btn btn-primary" asp-route-id="@item.Id" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
