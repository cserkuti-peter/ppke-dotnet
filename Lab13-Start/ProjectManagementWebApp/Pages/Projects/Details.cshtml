@page
@model ProjectManagementWebApp.Pages.Projects.DetailsModel

@{ ViewData["Title"] = "Details"; }

<h1>Details</h1>

<div>
    <h4>Project</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Project.ProjectName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Project.ProjectName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Project.ProjectDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Project.ProjectDescription)
        </dd>
    </dl>

</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Project.ProjectId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
<div id="task-div">
    <p>
        <a asp-page="/Tasks/Create" asp-route-projectId="@Model.Project.ProjectId">Create task</a>
    </p>
    <div id="task-list-div">

    </div>
</div>

@section scripts{
    <script>
        $(function () {
            $(document).ready(function () {
                $('#task-list-div').load('/Projects/Details/?handler=TaskListPartial&id=@Model.Project.ProjectId');
            });
        });
    </script>
}
