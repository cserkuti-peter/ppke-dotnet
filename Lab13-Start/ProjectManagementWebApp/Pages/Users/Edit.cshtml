@page
@model ProjectManagementWebApp.Pages.Users.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ApplicationUser</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserModel.Id" />
            <div class="form-group">
                <label asp-for="UserModel.Name" class="control-label"></label>
                <input asp-for="UserModel.Name" class="form-control" />
                <span asp-validation-for="UserModel.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UserModel.Email" class="control-label"></label>
                <input asp-for="UserModel.Email" class="form-control" />
                <span asp-validation-for="UserModel.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UserModel.UserName" class="control-label"></label>
                <input asp-for="UserModel.UserName" class="form-control" />
                <span asp-validation-for="UserModel.UserName" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="UserModel.Role" class="control-label"></label>
                <select asp-for="UserModel.Role" asp-items="Html.GetEnumSelectList<ProjectManagementWebApp.Models.RoleValues>()">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="UserModel.Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
